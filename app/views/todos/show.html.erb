<nav class="navbar navbar-light bg-info">
  <span class="navbar-brand mb-0 h1">Finish It Of!!</span>
   <a href="todos/index" class="btn btn-info btn-lg float-right mr-2 active" role="button" aria-pressed="true">Add Tasks</a>
</nav>

<p class="display-4 text-center">Your ToDo</p>

<div class="grid-container">
  <% @todos.each do |i| %>
    <div class="grid-item">
      <table>
        <tr>
          <td>
            <p class="p_heading">Task Number</p>
          </td>
          <td>
            <p class="input_values"><%=i.id%></p>
          </td>
        </tr>
        <tr>
          <td>
            <p class="p_heading">Task</p>
          </td>
          <td>
            <p class="input_values"><%=i.task%></p>
          </td>
        </tr>
        <tr>
          <td>
            <p class="p_heading">Description</p>
          </td>
          <td>
            <p class="input_values"><%=i.description%></p>
          </td>
        </tr>
        <tr>
          <td>
            <p class="p_heading">Status</p>
          </td>
          <td>
            <p class="input_values"><% if i.status==false%>
              <a href="/complete/<%=i.id%>"><button class="btn btn-outline-warning my-2 my-sm-0">Not Done</button></a>
              <% else%>
                <button class="btn btn-outline-primary my-2 my-sm-0" style="cursor:not-allowed">Done</button>
                <%end%></p>
          </td>
        </tr>
        <tr>
          <td>
            <p class="p_heading">Due Date</p>
          </td>
          <td>
            <p class="input_values"> <%if i.date==Date.today %>
              Today
              <%else%>
                <%=i.date%>
                  <%end%></p>
          </td>
        </tr>
        <tr>
          <td>
          <button class="btn btn-outline-success my-2 my-sm-0" onclick="delTask(<%=i.id%>)">Delete</button>
          </td>

        </tr>
      </table>
    </div>
    <%end%>

</div>


<script>
  function delTask(id) {
    alert("Confirm");
    window.location.href = "/delete/" + id;
  }
</script>